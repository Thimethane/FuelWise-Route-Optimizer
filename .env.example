# --- Security ---
DEBUG=True
SECRET_KEY=change-me-to-a-secure-random-string
ALLOWED_HOSTS=localhost,127.0.0.1,web,.app.github.dev
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000,https://*.app.github.dev

# --- Database ---
# Options: 'postgres' (Docker) or 'sqlite' (Local)
DB_ENGINE=postgres
DB_NAME=fuel_db
DB_USER=fuel_user
DB_PASSWORD=fuel_pass
DB_HOST=db
DB_PORT=5432

# --- Cache ---
# Provide REDIS_URL to use Redis (Docker). 
# To use LocMemCache (Local), comment this line out.
REDIS_URL=redis://redis:6379/0

# --- External APIs ---
GOOGLE_MAPS_API_KEY=your_google_api_key_here
